<MyGrid>
    cols: 1
    GridLayout:
        cols: 1
        TextInput:
            id: result_text
            text: ''
            font_size: result_text.height * 0.4
            multiline: False
            readonly: True
            halign: 'right'
            padding_y: [(self.height - self.line_height) / 2, 0]
    GridLayout:
        cols: 4
        Button:
            text: '('
            on_press: result_text.text += self.text
        Button:
            text: ')'
            on_press: result_text.text += self.text
        Button:
            text: '<'
            on_press: result_text.text = result_text.text[:-1]
        Button:
            text: 'C'
            on_press: result_text.text = ''
        Button:
            text: '7'
            on_press: result_text.text += self.text
        Button:
            text: '8'
            on_press: result_text.text += self.text
        Button:
            text: '9'
            on_press: result_text.text += self.text
        Button:
            text: '+'
            on_press: result_text.text += self.text
        Button:
            text: '4'
            on_press: result_text.text += self.text
        Button:
            text: '5'
            on_press: result_text.text += self.text
        Button:
            text: '6'
            on_press: result_text.text += self.text
        Button:
            text: '-'
            on_press: result_text.text += self.text
        Button:
            text: '1'
            on_press: result_text.text += self.text
        Button:
            text: '2'
            on_press: result_text.text += self.text
        Button:
            text: '3'
            on_press: result_text.text += self.text
        Button:
            text: '*'
            on_press: result_text.text += self.text
        Button:
            text: '.'
            on_press: result_text.text += self.text
        Button:
            text: '0'
            on_press: result_text.text += self.text
        Button:
            text: '/'
            on_press: result_text.text += self.text
        Button:
            text: '='
            on_press: result_text.text = root.result(result_text.text)